{
	"compilerOptions": {
		"target": "es5",
		"allowJs": true,
		"skipLibCheck": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"lib": ["es6", "dom"],
		"jsx": "preserve"
	},
	"exclude": ["src/setupProxy.js", "src/lambda"],
	"include": ["src"]
}
