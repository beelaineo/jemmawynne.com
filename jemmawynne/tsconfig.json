{
	"compilerOptions": {
		"module": "es6",
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"sourceMap": true,
		"jsx": "react",
		"rootDir": "src",
		"lib": ["es6", "es7", "dom"],
		"outDir": "./dist"
		/*
		TODO: Tighten these up once development is rolling
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true
		*/
	},
	"include": ["./src"],
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "dist"]
}
