{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    // "rootDir": ".",
    "lib": ["es6", "es7", "dom"],
    "outDir": "./dist",
    "types": ["node", "jest"],

    // "typeRoots": ["./node_modules/@types"],

    "baseUrl": "src",
    "paths": {
      "test-utils/*": ["test-utils/*"],
      "Components/*": ["components/*"],
      "Views/*": ["views/*"],
      "Types/*": ["types/*"],
      "Utils/*": ["utils/*"],
      "Providers/*": [".providers/*"]
    }
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "../node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/*",
    "dist",
    "build"
  ]
}
