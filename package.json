{
	"name": "root",
	"private": true,
	"scripts": {
		"setup": "yarn install",
		"test": "yarn workspace jemmawynne-app test",
		"build": "yarn workspace jemmawynne-app build && yarn workspace jemmawynne-proxy build",
    "start:app": "yarn workspace jemmawynne-app start",
    "start:proxy": "yarn workspace jemmawynne-proxy start"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.1.0",
		"@commitlint/config-conventional": "^8.1.0",
		"dotenv": "^8.0.0",
		"eslint": "^6.1.0",
		"husky": "^3.0.2",
		"lerna": "^3.16.4",
		"netlify-cli": "^2.12.0",
		"prettier": "^1.18.2",
		"pretty-quick": "^1.11.1",
		"yarnhook": "^0.4.2"
	},
	"workspaces": [
		"app",
		"sanity",
		"proxy"
	],
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "pretty-quick --staged",
			"post-checkout": "yarnhook",
			"post-merge": "yarnhook",
			"post-rewrite": "yarnhook"
		}
	}
}
