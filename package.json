{
	"name": "root",
	"private": true,
	"scripts": {
		"setup": "yarn install",
		"test": "yarn workspace jemmawynne-app test",
		"build": "yarn workspace jemmawynne-app build",
		"start:app": "yarn workspace jemmawynne-app start",
		"ncu": "yarn exec ncu && yarn workspaces run ncu",
		"ncu:u": "yarn exec ncu -u && yarn workspaces run ncu -u && yarn install"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.3.0",
		"@commitlint/config-conventional": "^16.2.4",
		"@next/eslint-plugin-next": "^12.2.4",
		"@typescript-eslint/eslint-plugin": "^5.33.0",
		"@typescript-eslint/parser": "^5.33.0",
		"babel-eslint": "^10.1.0",
		"dotenv": "^16.0.1",
		"eslint": "^8.21.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.30.1",
		"husky": "^7.0.4",
		"npm-check-updates": "^12.5.12",
		"prettier": "^2.7.1",
		"pretty-quick": "^3.1.3",
		"typescript": "^4.7.4",
		"vercel": "^24.2.5",
		"yarnhook": "^0.6.0"
	},
	"workspaces": [
		"app",
		"sanity"
	],
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "pretty-quick --staged",
			"post-checkout": "yarnhook",
			"post-merge": "yarnhook",
			"post-rewrite": "yarnhook"
		}
	},
	"resolutions": {
		"graphql": "^15.5.1",
		"@types/react": "17.0.2",
		"@types/react-dom": "17.0.2"
	},
	"packageManager": "yarn@3.2.1"
}
