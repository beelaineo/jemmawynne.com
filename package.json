{
	"name": "root",
	"private": true,
	"scripts": {
		"setup": "yarn install",
		"test": "yarn workspace jemmawynne-app test",
		"build": "yarn workspace jemmawynne-app build",
		"start:app": "yarn workspace jemmawynne-app start",
		"ncu": "yarn exec ncu && yarn workspaces run ncu",
		"ncu:u": "yarn exec ncu -u && yarn workspaces run ncu -u && yarn install"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"dotenv": "^8.2.0",
		"eslint": "^7.9.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.20.6",
		"husky": "^4.3.0",
		"npm-check-updates": "^9.0.1",
		"prettier": "^2.1.2",
		"pretty-quick": "^3.0.2",
		"typescript": "^4.0.2",
		"vercel": "^20.1.0",
		"yarnhook": "^0.4.3"
	},
	"workspaces": [
		"app",
		"sanity"
	],
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "pretty-quick --staged",
			"post-checkout": "yarnhook",
			"post-merge": "yarnhook",
			"post-rewrite": "yarnhook"
		}
	},
	"resolutions": {
		"graphql": "14.5.8"
	}
}
