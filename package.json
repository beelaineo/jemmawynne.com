{
	"name": "root",
	"private": true,
	"scripts": {
		"setup": "yarn install",
		"test": "yarn workspace jemmawynne-app test",
		"build": "yarn workspace jemmawynne-app build",
		"start:app": "yarn workspace jemmawynne-app start",
    "update": "yarn ncu && yarn workspaces run ncu",
    "ncu:u": "yarn exec ncu -u && yarn workspaces run ncu -u && yarn install"
	},
	"devDependencies": {
		"@commitlint/cli": "^9.0.1",
		"@commitlint/config-conventional": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^3.6.0",
		"@typescript-eslint/parser": "^3.6.0",
		"dotenv": "^8.2.0",
		"eslint": "^7.4.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.20.3",
		"husky": "^4.2.5",
		"lerna": "^3.22.1",
		"npm-check-updates": "^7.0.1",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"typescript": "^3.9.6",
		"vercel": "^19.1.1",
		"yarnhook": "^0.4.3"
	},
	"workspaces": [
		"app",
		"sanity"
	],
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "pretty-quick --staged",
			"post-checkout": "yarnhook",
			"post-merge": "yarnhook",
			"post-rewrite": "yarnhook"
		}
	},
	"dependencies": {
		"react-icons": "^3.10.0"
	},
	"resolutions": {
		"graphql": "14.5.8"
	}
}
