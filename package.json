{
	"name": "root",
	"private": true,
	"scripts": {
		"setup": "yarn install",
		"test": "yarn workspace jemmawynne-app test"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.0.0",
		"@commitlint/config-conventional": "^8.0.0",
		"dotenv": "^8.0.0",
		"eslint": "^5.16.0",
		"husky": "^2.4.0",
		"lerna": "^3.14.1",
		"prettier": "^1.17.1",
		"pretty-quick": "^1.11.0",
		"yarnhook": "^0.4.0"
	},
	"workspaces": [
		"app",
		"sanity",
		"use-shopify"
	],
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "pretty-quick --staged",
			"post-checkout": "yarnhook",
			"post-merge": "yarnhook",
			"post-rewrite": "yarnhook"
		}
	}
}
