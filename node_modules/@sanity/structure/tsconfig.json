{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test/**/*.ts"],
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "lib/",
    "target": "es2016",
    "declaration": true,
    "lib": ["dom", "es2016"]
  }
}
