{
  "name": "dom-testing-library",
  "version": "4.0.0",
  "description": "Simple and complete DOM testing utilities that encourage good testing practices.",
  "main": "dist/index.js",
  "module": "dist/dom-testing-library.esm.js",
  "umd:main": "dist/dom-testing-library.umd.js",
  "source": "src/index.js",
  "typings": "typings",
  "keywords": [
    "testing",
    "ui",
    "dom",
    "jsdom",
    "unit",
    "integration",
    "functional",
    "end-to-end",
    "e2e"
  ],
  "author": "Kent C. Dodds <kent@doddsfamily.us> (http://kentcdodds.com/)",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build": "kcd-scripts build && kcd-scripts build --bundle --no-clean",
    "lint": "kcd-scripts lint",
    "test": "kcd-scripts test",
    "test:update": "npm test -- --updateSnapshot --coverage",
    "validate": "kcd-scripts validate",
    "setup": "npm install && npm run validate -s",
    "dtslint": "dtslint typings"
  },
  "husky": {
    "hooks": {
      "pre-commit": "kcd-scripts pre-commit"
    }
  },
  "files": [
    "dist",
    "typings"
  ],
  "dependencies": {
    "@babel/runtime": "^7.4.3",
    "@sheerun/mutationobserver-shim": "^0.3.2",
    "pretty-format": "^24.7.0",
    "wait-for-expect": "^1.1.1"
  },
  "devDependencies": {
    "dtslint": "^0.7.1",
    "jest-dom": "^3.1.2",
    "jest-in-case": "^1.0.2",
    "kcd-scripts": "^1.2.2"
  },
  "eslintConfig": {
    "extends": "./node_modules/kcd-scripts/eslint.js",
    "rules": {
      "import/prefer-default-export": "off",
      "import/no-unassigned-import": "off",
      "import/no-useless-path-segments": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/testing-library/dom-testing-library.git"
  },
  "bugs": {
    "url": "https://github.com/testing-library/dom-testing-library/issues"
  },
  "homepage": "https://github.com/testing-library/dom-testing-library#readme"
}
